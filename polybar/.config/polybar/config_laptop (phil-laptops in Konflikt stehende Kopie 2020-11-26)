[colors]
;background = ${xrdb:color0:#222}

background = #282828
background-alt = #1d2021
;foreground = ${xrdb:color7:#222}
foreground = #ebdbb2
foreground-alt = #555
primary = #d79921
secondary = #98971a
alert = #cc241d

red = #cc241d
green = #98971a
yellow = #d79921
blue = #458588
purple = #b16286
aqua = #689d6a
gray = #a89984
orange = #d65d0e

[bar/primary]
monitor = ${env:MONITOR:LVDS-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.red}

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false

modules-left = bspwm
modules-center = mpd monocle
modules-right = filesystem xkeyboard memory cpu temperature battery backlight pulseaudio wlan eth date

tray-position = right
tray-padding = 2
;tray-background = #0063ff

wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

