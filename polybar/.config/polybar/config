[module/monocle]
type = custom/script
interval = 2

exec = ~/scripts/monocle.sh LVDS1
format-underline = ${colors.primary}
format-foreground = ${colors.foreground}
format-background = ${colors.primary}
format-prefix = "  ğŸ–¥ï¸  "
label = "%output%  "

